[mysqld]
server-id = 2
log_bin = mysql-bin
binlog_format = ROW
gtid_mode = ON
enforce_gtid_consistency = ON
log_slave_updates = ON
read_only = 1

# Реплицируем только нужные таблицы
replicate-do-db = bet
replicate-do-table = bet.bookmaker
replicate-do-table = bet.competition
replicate-do-table = bet.market
replicate-do-table = bet.odds
replicate-do-table = bet.outcome

# Игнорируем остальные таблицы
replicate-ignore-table = bet.events_on_demand
replicate-ignore-table = bet.v_same_event

[client]
socket = /var/lib/mysql/mysql.sock
